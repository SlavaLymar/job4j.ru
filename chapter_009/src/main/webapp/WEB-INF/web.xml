<web-app>
    <!-- /webstructure-->
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>ru.yalymar.webstructure.EchoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>

    <!-- /crudservlet-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ru.yalymar.crudservlet.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/crudservlet</url-pattern>
    </servlet-mapping>

    <!-- /servlet-->
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>ru.yalymar.servlet.controller.UsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>ru.yalymar.servlet.controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>ru.yalymar.servlet.controller.EditUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>ru.yalymar.servlet.controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <!-- /mvc-->
    <servlet>
        <servlet-name>StartController</servlet-name>
        <servlet-class>ru.yalymar.mvc.controller.StartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddController</servlet-name>
        <servlet-class>ru.yalymar.mvc.controller.AddController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>ru.yalymar.mvc.controller.DeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditController</servlet-name>
        <servlet-class>ru.yalymar.mvc.controller.EditController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartController</servlet-name>
        <url-pattern>/mvc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddController</servlet-name>
        <url-pattern>/mvcadd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/mvcdelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditController</servlet-name>
        <url-pattern>/mvcedit</url-pattern>
    </servlet-mapping>

    <!-- filter-->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.yalymar.filter.controller.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
</web-app>