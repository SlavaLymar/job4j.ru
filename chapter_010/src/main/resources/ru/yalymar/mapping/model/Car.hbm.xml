<hibernate-mapping>
    <class name="ru.yalymar.mapping.model.Car" table="cars">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <!-- model -->
        <many-to-one name="model" column="manufactor_id" class="ru.yalymar.mapping.model.Model"/>
        <!-- transmission -->
        <many-to-one name="transmission" column="transmission_id" class="ru.yalymar.mapping.model.Transmission"/>
        <!-- body -->
        <many-to-one name="body" column="body_id" class="ru.yalymar.mapping.model.Body"/>
        <!-- color -->
        <many-to-one name="color" column="color_id" class="ru.yalymar.mapping.model.Color"/>
    </class>
</hibernate-mapping>