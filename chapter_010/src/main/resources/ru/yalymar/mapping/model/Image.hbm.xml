<hibernate-mapping>
    <class name="ru.yalymar.mapping.model.Image" table="images">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="url" column="url"/>
        <many-to-one name="ad" column="ads_id" class="ru.yalymar.mapping.model.Ad" cascade="all"/>
    </class>
</hibernate-mapping>